# Copy this file to .env.local (or .env) and fill in your Supabase credentials.
# Values without defaults are required for authentication and admin uploads.

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON=your-anon-key

# Storage bucket that holds gallery and shop assets. Keep this in sync with your
# Supabase bucket name (defaults to drops-public in the app).
VITE_SUPABASE_BUCKET=drops-public

# Email address that is allowed to access the admin workspace.
VITE_ADMIN_EMAIL=admin@example.com

# Optional legacy support (falls back to this if VITE_ADMIN_EMAIL is missing).
VITE_ALLOWED_EMAIL=admin@example.com

# Optional override for the header logo.
# VITE_LOGO_SRC=https://cdn.yoursite.com/logo.svg
